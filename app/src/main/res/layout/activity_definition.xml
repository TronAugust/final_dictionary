<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dictionary.Definition.DefinitionActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tv_definition"
        android:layout_below="@+id/tv_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Definition of the word"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="474dp"
        android:text="Button"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/volume"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv_definition"
        android:layout_alignParentRight="true"

        android:layout_marginTop="67dp"
        android:layout_marginRight="42dp"
        android:background="@drawable/volume"></ImageView>

</RelativeLayout>
